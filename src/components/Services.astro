const problemas = [
  {
    content: "Explican claramente tu servicio",
  },
  {
    content: "Generan confianza desde el primer vistazo",
  },
  {
    content: "Funcionan perfecto en celular",
  },
  {
    content: "Ayudan a que más personas te contacten",
  },
